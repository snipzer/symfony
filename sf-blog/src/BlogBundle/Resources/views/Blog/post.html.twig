{% extends "BlogBundle::base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>Symfony Blog</h1>
        </div>

        <h2>{{ post.title }}</h2>
        <p><a href="{{ path('blog_category', {'categorySlug': post.category.slug}) }}">{{ post.category.slug }}</a>  Publier le {{ post.publishedAt|date("d/m/Y") }}</p>
        <p>{{ post.content|raw }}</p>
        <p>Written by <b>{{ post.author }}</b></p>

        <hr><hr>
        <h3>Commentaire:</h3>
        {% for comment in comments %}
            <p>Posted by <strong>{{ comment.pseudo }}</strong> on {{ comment.createdAt|date("d/m/Y") }}</p>
            <p>{{ comment.message|raw }}</p>

            {% if not loop.last %}
                <hr>
            {% endif %}
        {% endfor %}


        {% include "BlogBundle:Layout:form.html.twig" %}

    </div>
{% endblock content %}