{% extends "BlogBundle::base.html.twig" %}

{% block content %}
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="container">
        <div class="page-header">
            <h1>Symfony Blog</h1>
        </div>

        <h2>{{ post.title }}</h2>
        <p><a href="{{ path('blog_category', {'categorySlug': post.category.slug}) }}">{{ post.category.slug }}</a>  Publier le {{ post.publishedAt|date("d/m/Y") }}</p>
        <p>{{ post.content|raw }}</p>
        <p>Written by <b>{{ post.author }}</b></p>

        <hr><hr>

        {% include "BlogBundle:Layout:comments.html.twig" %}

        {% include "BlogBundle:Layout:form.html.twig" %}

    </div>
{% endblock content %}