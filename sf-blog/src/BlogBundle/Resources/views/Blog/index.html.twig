{% extends "BlogBundle::base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>Symfony Blog</h1>
        </div>

        {{ name }}

        {% for post in posts %}
            <div>
                <h2>
                    <a href="{{ path("blog_post", {'categorySlug': post.category.slug, 'postSlug': post.slug}) }}">
                        {{ post.title }}
                    </a>
                </h2>
                <p>
                    <a href="{{ path("blog_category", {'categorySlug': post.category.slug}) }}">
                        {{ post.category.title }}
                    </a> -
                    <em>Publi√© le {{ post.publishedAt|date('d/m/Y') }}</em>, par
                    <strong>{{ post.author }}</strong>
                </p>
                <p>
                    {{ post.content|summary }}
                </p>
                <p class="text-right">
                    <a href="{{ path('blog_post', {'categorySlug': post.category.slug, 'postSlug': post.slug}) }}" class="btn btn-primary btn-sm">
                        Lire la suite
                    </a>
                </p>
            </div>
            {% if not loop.last %}<hr>{% endif %}
        {% endfor %}
    </div>
{% endblock %}
