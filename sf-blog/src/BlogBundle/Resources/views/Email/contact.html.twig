{# src/CustomerBundle/Resources/views/Email/contact.html.twig #}
<!DOCTYPE html>
<html>
<head></head>
<body style="font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:19px;color:#333333;background:#f2f2f2;">
<div style="width:600px;margin:auto;padding:6px 20px;border:1px solid #cccccc;background:#ffffff;border-radius:7px;box-shadow:0 2px 4px #cccccc;">
    <h1>{{ data.subject }}</h1>
    <hr>
    <p>
        De <a href="mailto:{{ data.email }}">
            {{ data.email }}
        </a>.
    </p>
    <p style="border-top:1px solid #cccccc;margin-top:20px;padding-top:20px;">
        {{ data.message|nl2br }}
    </p>
</div>
</body>
</html>