    <ul class="list-inline">
        <li>
            <a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}" class="btn btn-sm btn-default">
                Back to the list
            </a>
        </li>

        {%- if ('edit' in actions) and (not hide_edit) %}

        <li>
            <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}"
                class="btn btn-sm btn-warning">
                Edit
            </a>
        </li>

        {%- endif %}

        {%- if ('delete' in actions) and (not hide_delete) %}

        <li>
            {{ '{{ form_start(delete_form) }}' }}
                <input type="submit" value="Delete" class="btn btn-sm btn-danger">
            {{ '{{ form_end(delete_form) }}' }}
        </li>

        {%- endif %}

    </ul>
